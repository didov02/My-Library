<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
<h1>Login</h1>

<% if (alertMessage) { %>
    <p class="alert"><%= alertMessage %></p>
<% } %>

<!-- Login Form -->
<form action="login" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <button type="submit">Login</button>
</form>

<!-- Redirect to Register -->
<div>
    <p>Don't have an account?</p>
    <button onclick="window.location.href='/users/register';" class="btn-register">Register</button>
</div>

<script>
    // Remove query string from URL
    const url = new URL(window.location.href);
    if (url.searchParams.has('message')) {
        url.searchParams.delete('message'); // Remove the message parameter
        window.history.replaceState(null, '', url.pathname); // Update the URL without reloading
    }
</script>

</body>
</html>
